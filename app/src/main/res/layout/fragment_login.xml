<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="140dp"
    android:paddingEnd="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textAppearance="@style/AppTypography.Headline" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:text="@string/email"
        android:textAppearance="@style/AppTypography.TitleMedium" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/AppWidget.TextField.Flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@gmail.com"
            android:padding="16dp"
            android:textAppearance="@style/AppTypography.BodyMedium"
            android:textColorHint="?attr/colorOnPrimaryContainer"
            tools:ignore="HardcodedText" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="@string/password"
        android:textAppearance="@style/AppTypography.TitleMedium" />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/AppWidget.TextField.Flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_password"
            android:padding="16dp"
            android:textAppearance="@style/AppTypography.BodyMedium"
            android:textColorHint="?attr/colorOnPrimaryContainer"
            tools:ignore="HardcodedText" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>