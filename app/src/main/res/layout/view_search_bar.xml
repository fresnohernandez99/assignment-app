<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/AppWidget.TextField.Flat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:startIconDrawable="@drawable/search_ico_fixed_margin"
        app:startIconTint="?attr/colorOnBackground">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="@string/search_courses"
            android:inputType="text"
            android:drawablePadding="@dimen/spacing_short"
            android:maxLines="1"
            android:padding="@dimen/spacing_medium"
            android:textAppearance="@style/AppTypography.BodyMedium"
            android:textColorHint="?attr/colorOnPrimaryContainer" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/spacing_short"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_short"
            android:importantForAccessibility="no"
            android:src="@drawable/filter_ico"
            app:tint="?attr/colorOnBackground" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

